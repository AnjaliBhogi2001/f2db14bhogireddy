      div.row 
        div(class='DogAttr mr-3') dogName is: 
        div #{dogName} 
      div.row 
        div(class='DogAttr mr-3') dogAge is: 
        div #{dogAge} 
      div.row 
        div(class='DogAttr mr-3') dogBreed is: 
        div #{dogBreed} 
 
