block content
 h1= title 
 
   if (toShow == null) 
     h2 No instance to delete 
   else 
    - let Dogid = toShow._id 
    - let dogName = toShow.dogName 
    - let dogAge = toShow.dogAge 
    - let dogBreed = toShow.dogBreed 
    - let actionid = "/resource/Dog/" + Dogid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
